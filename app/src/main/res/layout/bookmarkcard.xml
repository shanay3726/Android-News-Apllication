<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cards"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="0dp"
            android:id="@+id/imageView"
            android:scaleType="fitXY"
            android:src="@drawable/clear_weather"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="20dp"
            android:text="Line 2"
            android:textSize="15sp"
            tools:ignore="UnknownId" />
        <View
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/time"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/view123"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@id/view123"
            android:layout_toRightOf="@id/view123"
            android:text="Line 3"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/bookmarking"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/hollow_bookmark"
            android:tint="@color/bookmark"
            android:layout_marginEnd="5dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>